<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>
        <link href="signupStyle.css" rel="stylesheet" type="text/css">
        <link href="/partials/footer.css" rel="stylesheet" type="text/css">
    </head>
    
    <body>
        <div id="userLoginHeader">
            <img id="logo" src="EventPlugLogo.png" />
        </div>
        
        <form action="/signup" id="signup" method="post">
            <input name="userName" class="userInp" id="name" type="text" placeholder="Please enter your name" required>
            <input name="userLogin" class="userInp" id="username" type="email" placeholder="Please enter your email address" required>
            <input name="passLogin" class="userInp" id="password1"  type="password" placeholder="Enter your password" required>
            <input name="passLogin" class="userInp" id="password2"  type="password" placeholder="Re-enter your password" required>
            
            <div id="dropdown">
              <div id="dropbtn" name="question">Choose your security question</div>
              <div class="dropdown-content">
                <a href="#" id="q1">What is your mother's maiden name?</a>
                <a href="#" id="q2">Where is your birth place?</a>
                <a href="#" id="q3">When is your best friend's birthday?</a>
              </div>
            </div>
            
            <input name="qAnswer" class="userInp" id="answer"  type="password" placeholder="Answer the chosen security question" required>
            <input name="qAnswer" class="userInp" id="confirm"  type="password" placeholder="Confirm answer" required>
            
            <input id="saveButton" type="submit" value="Register"/>
        </form>
        
        {{> footer}}
        
        <script>
            var accounts=[];       
            document.getElementById("saveButton").addEventListener("click", function(){
                if(document.getElementById('password1').value != document.getElementById('password2').value) {
                    alert('Passwords do not match');
                };
            });
            
            document.getElementById("q1").addEventListener("click", function(){
                document.getElementById("dropbtn").innerHTML = document.getElementById("q1").innerHTML;
                document.getElementById("dropbtn").value = document.getElementById("q1").innerHTML;
            });
            
            document.getElementById("q2").addEventListener("click", function(){
                document.getElementById("dropbtn").innerHTML = document.getElementById("q2").innerHTML;
            });
            
            document.getElementById("q3").addEventListener("click", function(){
                document.getElementById("dropbtn").innerHTML = document.getElementById("q3").innerHTML;
            });
            
            document.getElementById("saveButton").addEventListener("click", function(){
                if(document.getElementById('answer').value != document.getElementById('confirm').value) {
                    alert('Security answers do not match');
                };
            });
        </script>
    </body>
</html>